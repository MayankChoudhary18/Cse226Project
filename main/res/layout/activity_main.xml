<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/gradient">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="310sp"
        android:src="@drawable/game"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gaming Hub"
        android:id="@+id/restaurant"
        android:layout_marginTop="30sp"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mayank Choudhary"
        android:layout_below="@+id/restaurant"
        android:id="@+id/name"
        android:layout_marginTop="30sp"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11802377"
        android:id="@+id/regno"
        android:layout_below="@+id/name"
        android:layout_marginTop="10sp"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RKOM52A39"
        android:id="@+id/assignment"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/regno"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/assignment"
        android:layout_centerInParent="true"
        android:layout_marginTop="20sp"
        />

</RelativeLayout>